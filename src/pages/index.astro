---
import RootLayout from "../layouts/RootLayout.astro";

import lucho from "../assets/lucho2.webp";


---


<RootLayout title="Prospect">

	<img class="lucho" src={lucho.src} alt="">

</RootLayout>

<style>
	.lucho {
		display: block;
		width: 900px;
		margin: auto;

		animation: fade-in 10s infinite;
	}
	
	@keyframes fade-in {
		0% {
			opacity: 0;
		}
		30% {
			opacity: 1;
		}
		70% {
			opacity: 1;
			scale: 1;
		}
		100% {
			opacity: 0;
			scale: 1.5;
		}
	}
	
</style>